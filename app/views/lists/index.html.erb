<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<h1>All lists:</h1>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  
  <% @lists.each do |list| %>
  <tr>
    <td><%= link_to list.title, list_path(list.id) %></td>
    <td><%= list.description %></td>
    <td>
      <%= link_to edit_list_path(list), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
    </td>
    <td>
        <%= link_to list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" do %>
          <i class="glyphicon glyphicon-trash"></i>
        <% end %>
      </td>
  </tr>
  <% end %>
</table>

<br/>
<p>
  Click here to generate a shopping list based on the items in your lists:
</p>
<%= link_to "Generate shopping list", '/shoppings', class: "btn btn-primary" %>